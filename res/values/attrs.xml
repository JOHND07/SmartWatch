<resources>

    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color"/>
        <attr name="roundProgressColor" format="color"/>
        <attr name="roundWidth" format="dimension"/>
        <attr name="roundLength" format="dimension"/>
        <attr name="roundBackgroudWidth" format="dimension"/>
        <attr name="textColor" format="color"/>
        
        <attr name="deepSleepColor" format="color"/>
        <attr name="lightSleepColor" format="color"/>
        <attr name="wakeupSleepColor" format="color"/>
        
        <attr name="textSize" format="dimension"/>
        <attr name="title" format="string"/>
        <attr name="titleTextSize" format="dimension"/>
        <attr name="roundStartAngle" format="dimension"/>
        <attr name="roundSweepAngle" format="dimension"/>
        <attr name="max" format="integer"/>
        <attr name="textIsDisplayable" format="boolean"/>
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
            <enum name="STROKE_BLOCK" value="2"></enum>
        </attr>
     </declare-styleable>  
     
    <declare-styleable name="FormLayout">
        <attr name="formMargin" format="dimension"/>
        <!--  
        <attr name="radius" format="dimension"/>
        -->
        <attr name="clickRadius" format="dimension"/>
        <attr name="lineInterval" format="dimension"/>
     </declare-styleable>
     
     <declare-styleable name="CircularTouch">
        <attr name="pointerBackground" format="color|reference" />
        <attr name="limitAngleMax" format="integer" />
        <attr name="limitAngleMin" format="integer" />
        <attr name="CirculartextColor" format="color"/>
        <attr name="textPointerSize" format="dimension"/>
        <attr name="CirculartextSize" format="dimension"/>
        <attr name="hint" format="string"/>
     </declare-styleable>    
     
    <declare-styleable name="WheelView">
        <attr name="wheelTextSize" format="dimension"/>
        <attr name="wheelPadding" format="dimension"/>
    </declare-styleable>     
    
    
    <declare-styleable name="TasksCompletedView">
        <attr name="radius" format="dimension" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="circleColor" format="color" />
        <attr name="ringColor" format="color" />
    </declare-styleable>
    <declare-styleable name="MotionDataBut">
        <attr name="icon" format="reference"></attr>
        <attr name="unit_text" format="string"></attr>
        <attr name="unit_text_down" format="string"></attr>
    </declare-styleable>
    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>
    
</resources>


