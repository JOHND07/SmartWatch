<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/track_main_layout" >
    
<LinearLayout
        android:id="@+id/title_ly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:orientation="horizontal" >
        <ImageButton
            android:id="@+id/left_Btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/back_btn" />
        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/Anti_lost"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/syn_text"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/sync"
            android:textColor="#ffffff"
            android:textSize="18sp" />
       </LinearLayout>
      
      <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:clickable="true" >
      <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >
        <TextView
            android:id="@+id/texttip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/Anti_lost_tip"
            android:textColor="@color/textColor"
            android:textAppearance="@android:style/TextAppearance.Medium" />
        </RelativeLayout>
      </RelativeLayout>
      
      <View android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="@color/line_color" />
      
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:clickable="true" >
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/Anti_lost"
            android:textColor="@color/textColor"
            android:textAppearance="@android:style/TextAppearance.Medium" />
        </RelativeLayout>
        <com.guogee.smartwatch.widget.Switch
		    android:id="@+id/tracker_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
            android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="10dp" />
    </RelativeLayout>
    
    <View android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="@color/line_color" />
        
    <RelativeLayout
        android:id="@+id/interval_layout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:clickable="true" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/interval"
            android:textColor="@color/textColor"
            android:textAppearance="@android:style/TextAppearance.Medium" />
        <TextView
		    android:id="@+id/interval_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
            android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="20dp"
		    android:text="20"
		    android:textColor="@color/textColor" />
    </RelativeLayout>
    
    <View android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="@color/line_color" />
</LinearLayout>
