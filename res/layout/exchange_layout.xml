<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color" >
    
       <LinearLayout
        android:id="@+id/title_ly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:orientation="horizontal" >
        <ImageButton
            android:id="@+id/back_Btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/back_btn" />
        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="龙武游戏兑换好礼活动"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        <TextView
            android:visibility="invisible"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/sync"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        </LinearLayout>
    
       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="fill_parent" >

           <ImageView
               android:id="@+id/imageView1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="80dp"
               android:background="@drawable/plusdot_successful" />

           <TextView
               android:id="@+id/textView1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/imageView1"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="29dp"
               android:text="兑换成功"
               android:textAppearance="@android:style/TextAppearance.Large"
               android:textColor="@android:color/white" />

           <RelativeLayout
               android:id="@+id/relativeLayout1"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/textView1"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="10dp" >
<!-- 
               <TextView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="兑换码为:" /> -->
               <TextView
                   android:id="@+id/exchange_code"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentTop="true"
                   android:layout_centerHorizontal="true"
                   android:gravity="center"
                   android:text="兑换码为:XXX-XXXX-XXXX"
                   android:textAppearance="@android:style/TextAppearance.Medium"
                   android:textColor="@android:color/white" />

               <TextView
                   android:id="@+id/texttest"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentTop="true"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="22dp"
                   android:text="您可以在我的礼包中查询"
                   android:textAppearance="@android:style/TextAppearance.Medium"
                   android:textColor="@android:color/white" />

               <Button
                   android:id="@+id/copy_code_btn"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/texttest"
                   android:layout_marginLeft="30dp"
                   android:layout_marginRight="30dp"
                   android:layout_marginTop="80dp"
                   android:background="@drawable/exchange_btn"
                   android:text="复制兑换码"
                   android:textColor="@android:color/white"
                   android:visibility="visible" />

               <Button
                   android:id="@+id/share_btn"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/copy_code_btn"
                   android:layout_marginLeft="30dp"
                   android:layout_marginRight="30dp"
                   android:layout_marginTop="20dp"
                   android:background="@drawable/person_info_btn_b"
                   android:text="分享"
                   android:textColor="@android:color/white"
                   android:visibility="gone" />
           </RelativeLayout>

           <RelativeLayout android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="45dp"
               android:layout_below="@+id/relativeLayout1"
               android:visibility="gone" >
           <TextView
               android:id="@+id/consume_bean"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:textColor="@android:color/white"
               android:text="消耗的能量豆:" />
           <TextView 
               android:id="@+id/consume_bean_num"
               android:layout_toRightOf="@+id/consume_bean"
               android:layout_marginLeft="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="3"
               android:textColor="@android:color/white" />
           <ImageView 
               android:layout_width="15dp"
               android:layout_height="15dp"
               android:layout_marginLeft="5dp"
               android:layout_toRightOf="@+id/consume_bean_num"
               android:background="@drawable/plusdot_gift_bean" />
           </RelativeLayout>
           
       </RelativeLayout>

</LinearLayout>
